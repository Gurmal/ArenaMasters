<h2>My Fights</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reputation</th>
      <th>Rounds</th>
    </tr>
  </thead>

  <tbody>
    <% @myfights.each do |fight| %>
      <tr>
        <td><%= link_to fight.id, event_fight_path(fight.event, fight) %></td>
        <td><%= fight.winner %></td>
        <td><%= fight.rounds %></td>
