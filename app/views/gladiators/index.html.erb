<%= render "shared/menu" %>
<p id="notice"><%= notice %></p>

<%= @team.name %>
<h1>Gladiators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fightstyle</th>
      <th>Str</th>
      <th>Dex</th>
      <th>Spd</th>
      <th>Con</th>
      <th>Chr</th>
      <th>Intl</th>
      <th>Birth</th>
      <th>Firstfight</th>
      <th>Death</th>
      <th>Wounds</th>
      <th>Reputation</th>
      <th>Hitmod</th>
      <th>Strmod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gladiators.each do |gladiator| %>
      <tr>
        <td><%= link_to gladiator.name, team_gladiator_path(@team, gladiator) %></td>
        <td><%= gladiator.fightStyle %></td>
        <td><%= gladiator.str %></td>
        <td><%= gladiator.dex %></td>
        <td><%= gladiator.spd %></td>
        <td><%= gladiator.con %></td>
        <td><%= gladiator.chr %></td>
        <td><%= gladiator.intl %></td>
        <td><%= gladiator.birth %></td>
        <td><%= gladiator.firstfight %></td>
        <td><%= gladiator.death %></td>
        <td><%= gladiator.wounds %></td>
        <td><%= gladiator.reputation %></td>
        <td><%= gladiator.hitmod %></td>
        <td><%= gladiator.strmod %></td>
        <td><%= link_to 'Edit', edit_team_gladiator_path(@team, gladiator) %></td>
        <td>Destroy</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Hire Gladiator', new_team_gladiator_path(@team) %>
<br><br>
<%= link_to 'Back', @team %>