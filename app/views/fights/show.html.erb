
<p id="notice"><%= notice %></p>
<head>
<p><%= link_to 'Event', @event %> |
<%= link_to 'Back', :back %> |
<%= link_to 'Run', run_fight_path(@fight) %></p>

Event: <%= @event.name %><br>
Fight ID: <%= @fight.id.to_s %><br>
Sequence: <%= @fight.sequence %><br>
<% unless @fight.winner.nil? %>
<%='Winner: '+@fight.winner %><br>
<%end%>
</head>
<body>
<h1>Fighters in Fight</h1>
<table>
  <thead>
    <tr>
      <th>Name (Rep)</th>
      <th>Team</th>
    </tr>
  </thead>

  <tbody>
    <% @fight.gladiators.each do |gladiator| %>
      <tr>
        <td><%= link_to gladiator.name, team_gladiator_path(gladiator.team,gladiator) %>
        (<%= gladiator.reputation %>)</td>
        <td><%= gladiator.team.name %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

<!-- only print the log if the fight has happened-->
<h2>Fight Log</h2>
<%= if not(@fight.log.nil?) then @fight.log.html_safe else 'Fight not fought.' end %>
</body>
<footer>
<!-- footer controls-->
<p>
<%= link_to 'Event', @event %> |
<%= link_to 'Back', :back %> |
<%= link_to 'Run', run_fight_path(@fight) %>
</p>
</footer>